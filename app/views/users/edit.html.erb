<h1>Edit User</h1>


<% if @user.errors.any? %>
    <div>
        <ul>
            <% @user.errors.full_messages.each do |error| %>
                <li><%= error %></li>
            <% end %>
        </ul>
    </div>  
<% end %>

<%= form_for @user do |form|%>
    Username: <%= form.text_field :username%><br>
    Email: <%= form.text_field :email%><br>
    Password: <%= form.password_field :password%><br>
    <%= form.submit%>
<% end %>
